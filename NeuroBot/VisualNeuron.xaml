<UserControl x:Class="NeuroBot.VisualNeuron"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuroBot"
             mc:Ignorable="d" d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Ellipse x:Name="ellipse" Width="{Binding ActualHeight, ElementName=ellipse, Mode=OneWay}" Fill="Red" Stroke="Black" StrokeThickness="2"/>
        <Label x:Name="TypeLabel" Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="20               " HorizontalAlignment="Center" VerticalAlignment="Center">B</Label>
        <Label x:Name="ValueLabel" Grid.Row="1" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="16" Padding="0,0,0,0">V: 0.35</Label>
        <Label x:Name="BiasLabel" Grid.Row="2" HorizontalContentAlignment="Center" FontSize="12" Padding="0,0,0,0">Bias: 0.00</Label>
        <Label x:Name="MemoryLabel" Grid.Row="3" HorizontalContentAlignment="Center" FontSize="12" Padding="0,0,0,0">Memory: 0.00</Label>
    </Grid>
</UserControl>
